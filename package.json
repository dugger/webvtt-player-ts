{
  "name": "webvtt-player-ts",
  "version": "1.0.0",
  "description": "View WebVTT as a transcript",
  "author": "Ed Summers <ehs@pobox.com>",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/edsu/webvtt-player.git"
  },
  "main": "dist/webvtt-player.umd.js",
  "module": "dist/webvtt-player.es.js",
  "exports": {
    ".": {
      "import": "./dist/webvtt-player.es.js",
      "require": "./dist/webvtt-player.umd.js"
    }
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "vite --port 3000",
    "lint": "eslint src --ext js,jsx,ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext js,jsx,ts,tsx --fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.29.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "postcss": "^8.4.0",
    "typescript": "^5.4.0",
    "vite": "^6.2.0"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
